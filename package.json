{
  "name": "novel",
  "displayName": "novel",
  "description": "read novel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:novel-list",
    "onCommand:selectOnline",
    "onCommand:selectLocal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openSelectedNovel",
        "title": "打开该小说"
      },
      {
        "command": "selectOnline",
        "title": "在线搜索"
      },
      {
        "command": "selectLocal",
        "title": "本地目录"
      }
    ],
    "views": {
      "novel-read": [
        {
          "name": "本地列表栏",
          "id": "novel-list"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "selectOnline",
          "alt": "selectOnline",
          "group": "navigation"
        },
        {
          "command": "selectLocal",
          "alt": "selectLocal",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "novel-read",
          "title": "NOVEL READ",
          "icon": "images/book.svg"
        }
      ]
    },
    "viewsWelcome": [
			{
				"view": "novel-list",
				"contents": "添加文件夹路径\n[Open Folder](command:vscode.openFolder)"
			}
		],
    "configuration": {
			"title": "FileDir",
			"properties": {
				"fileDir.location": {
					"type": "string",
					"default": "",
					"description": "自定义默认本地文件目录"
				}
			}
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.51.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}