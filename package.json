{
  "name": "novel",
  "displayName": "novel",
  "description": "read novel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:novel-list"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openSelectedNovel",
        "title": "打开该小说"
      },
      {
        "command": "openOnlineNovel",
        "title": "打开该网络小说"
      },
      {
        "command": "searchOnlineNovel",
        "title": "在线搜索"
      },
      {
        "command": "openLocalDir",
        "title": "添加本地图书"
      },
      {
        "command": "addFavorite",
        "title": "添加收藏"
      }
    ],
    "keybindings": [],
    "menus": {
      "editor/context": [],
      "view/title": [
        {
          "command": "openLocalDir",
          "when": "view == novel-list",
          "group": "navigation"
        },
        {
          "command": "searchOnlineNovel",
          "when": "view == novel-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "addFavorite",
          "when": "view == novel-list && viewItem == online",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "novel-read",
          "title": "小说阅读",
          "icon": "images/pdf.svg"
        }
      ]
    },
    "views": {
      "novel-read": [
        {
          "name": "小说列表栏",
          "id": "novel-list"
        },
        {
          "name": "收藏的网络小说",
          "id": "favorite-novel"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "小说插件配置",
      "properties": {
        "novel.favorites": {
          "type": "array",
          "default": [],
          "scope": "window",
          "description": "小说收藏名单"
        },
        "novel.progress": {
          "type": "object",
          "default": {},
          "scope": "window",
          "description": "小说阅读进度"
        },
        "novel.fileDir": {
          "type": "string",
          "scope": "window",
          "description": "小说本地存放目录"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "open": "^7.0.0",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.29"
  }
}
